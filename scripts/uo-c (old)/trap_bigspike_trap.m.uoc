// UO-C (old)
on creation()
{
  setType(this, 0x01);
  return(0x00);
}

on enterrange<0x03>(obj target)
{
  if(!hasObjVar(this, "disarmed"))
  {
    doLocAnimation(getLocation(this), 0x1D99, 0x02, 0x30, 0x00, 0x00);
  }
  return(0x01);
}

on enterrange<0x00>(obj target)
{
  if(!hasObjVar(this, "disarmed"))
  {
    doLocAnimation(getLocation(this), 0x1D99, 0x02, 0x30, 0x00, 0x00);
    loseHP(target, dice(0x0A, 0x07));
  }
  return(0x01);
}